---
interface Props {
    title: string;
    content: string;
}
const { title, content } = Astro.props;
---

<div class="grid grid-cols-1 place-items-center space-y-5 p-10 text-center text-zinc-800 hover:shadow">
    <slot />
    <h3 class="text-xl font-bold uppercase">{title}</h3>
    <p>{content}</p>
</div>
