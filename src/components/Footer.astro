---
import Image from "astro/components/Image.astro";
import deostiLogo from "../media/deosti-simple-white.webp";
import Whatsapp from "./icons/contact/Whatsapp.astro";
---

<section class="grid place-items-center bg-zinc-950 p-2 text-zinc-100">
    <div class="container flex flex-col items-start justify-between gap-5 p-5 text-xs md:flex-row md:items-center">
        <span>Sua Empresa © 2024. Todos os direitos reservados.</span>
        <a href="https://deosti.com.br" target="_blank" class="grid place-items-end">
            <Image src={deostiLogo} alt={"Este site foi desenvolvido por DeOsti Soluções Web"} width={100} />
        </a>
    </div>
</section>

<a
    href="https://wa.me/5543996107473?text=Quero um orçamento de site!"
    target="_blank"
    class="fixed bottom-10 right-5 z-50 rounded-full bg-green-700 p-3 hover:bg-primary"
>
    <Whatsapp fill="#FFF" width={28} />
</a>
