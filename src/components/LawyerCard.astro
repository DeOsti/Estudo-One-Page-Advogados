---
interface Props {
    title: string;
    name: string;
}

const { title, name } = Astro.props;
---

<div class="bg-zinc-100">
    <div class="flex max-w-[320px] flex-col items-center justify-between p-5 text-center">
        <slot />
        <span class="mt-5 uppercase text-primary">{title}</span>
        <h3 class="text-2xl font-semibold uppercase text-zinc-800">{name}</h3>
    </div>
</div>
