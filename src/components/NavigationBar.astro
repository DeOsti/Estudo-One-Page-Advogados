---
import { Image } from "astro:assets";
import logo from "../media/adv-logo.webp";
---

<nav class="flex items-center justify-center bg-zinc-50">
    <div class="container flex items-center justify-between py-2">
        <a class="" href="#home"><Image src={logo} alt={"logotipo da empresa"} loading={"eager"} /> </a>

        <div>
            <input id="sidebar-active" type="checkbox" class="peer hidden" />
            <label for="sidebar-active" class="block cursor-pointer md:hidden">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-menu"
                >
                    <line x1="4" x2="20" y1="12" y2="12"></line>
                    <line x1="4" x2="20" y1="6" y2="6"></line>
                    <line x1="4" x2="20" y1="18" y2="18"></line>
                </svg>
            </label>

            <label
                id="overlay"
                for="sidebar-active"
                class="fixed left-0 top-0 z-40 hidden h-full w-full bg-black opacity-75 peer-checked:flex"></label>

            <div
                class="fixed -right-full top-0 z-50 flex h-full w-3/5 flex-col items-end bg-zinc-50 shadow-xl transition-all duration-500 peer-checked:right-0 md:static md:w-full md:flex-row md:items-center md:shadow-none"
            >
                <label for="sidebar-active" class="block cursor-pointer stroke-zinc-900 p-5 md:hidden">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-x"
                    >
                        <path d="M18 6 6 18"></path>
                        <path d="m6 6 12 12"></path>
                    </svg>
                </label>

                <div
                    class="flex w-full flex-col text-sm font-bold uppercase text-zinc-700 no-underline *:border-y-2 *:border-transparent *:p-5 *:transition *:duration-300 hover:*:bg-primary hover:*:text-zinc-50 md:flex-row md:gap-5 md:*:rounded md:*:px-5 md:*:py-2"
                >
                    <a href="#home">Home</a>
                    <a href="#quem-somos">Quem Somos</a>
                    <a href="#atuacao">Áreas de Atuação</a>
                    <a href="#equipe">Equipe</a>
                    <a href="#contato">Contato</a>
                </div>
            </div>
        </div>
    </div>
</nav>
